# Server Configuration
NODE_ENV=development
PORT=8080

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=dialer:

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=1d
JWT_REFRESH_EXPIRY=7d

# Google Sheets Configuration
GOOGLE_SERVICE_ACCOUNT=base64-encoded-service-account-json
GOOGLE_ROUTER_SPREADSHEET_ID=your-router-spreadsheet-id

# Dialpad Configuration
DIALPAD_API_KEY=your-dialpad-api-key
DIALPAD_API_URL=https://api.dialpad.com/v2
DIALPAD_WEBHOOK_SECRET=your-webhook-signature-secret

# Default Policies
ORG_DEFAULT_TZ=America/Denver
DEFAULT_CALL_WINDOW_START=09:00
DEFAULT_CALL_WINDOW_END=18:00
MAX_ATTEMPTS_PER_PHONE=3
RESPECT_TIME_WINDOWS=true
RESPECT_NEXT_RETRY_AT=true
STOP_ON_FIRST_CORRECT=true

# Retry Delays (in minutes)
RETRY_DELAY_VM_OR_NA_UNKNOWN=180
RETRY_DELAY_VM_SAME_NAME=180
RETRY_DELAY_NO_ANSWER=60

# Runtime Limits
MAX_INCALL_MINUTES=45
WS_HEARTBEAT_SECONDS=20

# Network Configuration
NETWORK_TIMEOUT_MS=10000
BACKOFF_BASE_MS=500
BACKOFF_MAX_MS=10000
IDEMPOTENCY_HEADER=Idempotency-Key

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100